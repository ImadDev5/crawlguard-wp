{
  "name": "crawlguard-wp",
  "version": "1.0.0",
  "description": "WordPress plugin for AI content monetization - The Stripe for AI Content Access",
  "main": "crawlguard-wp.php",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "lint": "npm run lint:js && npm run lint:php",
    "lint:js": "eslint assets/js/**/*.js",
    "lint:php": "phpcs --standard=WordPress .",
    "format": "prettier --write assets/js/**/*.js",
    "format:check": "prettier --check assets/js/**/*.js",
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config tests/jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config tests/jest.config.js --testPathPattern=integration",
    "test:e2e": "playwright test --config=tests/playwright.config.js",
    "test:e2e:headed": "playwright test --config=tests/playwright.config.js --headed",
    "test:e2e:debug": "playwright test --config=tests/playwright.config.js --debug",
    "test:api": "jest --config tests/jest.config.js --testPathPattern=api",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:php": "phpunit -c tests/phpunit.xml",
    "test:php:unit": "phpunit -c tests/phpunit.xml --testsuite='Unit Tests'",
    "test:php:integration": "phpunit -c tests/phpunit.xml --testsuite='Integration Tests'",
    "test:php:coverage": "phpunit -c tests/phpunit.xml --coverage-html tests/coverage/phpunit",
    "playwright:install": "playwright install",
    "playwright:report": "playwright show-report tests/coverage/playwright",
    "zip": "npm run build && node create-plugin-zip.js",
    "release": "npm run build && npm run test && npm run zip",
    "start": "npm run dev"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "ai",
    "monetization",
    "bot-detection",
    "content-protection",
    "revenue"
  ],
  "author": "CrawlGuard Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@jest/globals": "^30.0.5",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@wordpress/env": "^10.28.0",
    "@wordpress/scripts": "^30.21.0",
    "axios-mock-adapter": "^2.1.0",
    "babel-jest": "^30.0.5",
    "babel-loader": "^9.1.0",
    "chalk": "^5.5.0",
    "cross-env": "^10.0.0",
    "css-loader": "^6.8.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.42.0",
    "eslint-config-wordpress": "^2.0.0",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^2.7.0",
    "phpunit": "^4.0.0",
    "playwright": "^1.54.2",
    "prettier": "^2.8.8",
    "supertest": "^7.1.4",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.4.0",
    "chart.js": "^4.3.0",
    "itty-router": "^4.2.2",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/crawlguard-wp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/crawlguard-wp/issues"
  },
  "homepage": "https://crawlguard.com"
}
